<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs') %>

    <body>
        <div style="max-height: 100vh; overflow: hidden">
            <%- include('partials/real_nav.ejs') %>
                <div class="auth_form">
                    <div class="auth_form_cover">
                        <div>
                            <h5>Create a free account</h5>
                            <p>Create a free account to save your designs on our database so you can access at anytime
                                from anywhere. You can also directly update your Youtube Thumbnail from the app by linking
                                your Google account</p>
                            <% if(typeof error !=='undefined' ) { %>
                                <p class="error mt-3 text-danger">
                                    <%= error %>
                                </p>
                                <% } %>
                                    <form action="/signup" method="POST" class="mt-3">
                                        <div class="form_flex">
                                            <div class="form_group">
                                                <label htmlFor="firstName">First name</label>
                                                <input type="text" name="firstName" id="firstName" />
                                            </div>
                                            <div class="form_group">
                                                <label htmlFor="lastName">Last name</label>
                                                <input type="text" name="lastName" id="lastName" />
                                            </div>
                                        </div>
                                        <div class="form_group">
                                            <label htmlFor="email">Email address</label>
                                            <input type="text" name="email" id="email" />
                                        </div>
                                        <div class="form_group">
                                            <label htmlFor="password">Password</label>
                                            <input type="password" name="password" id="password" />
                                        </div>
                                        <button class="bg_black full_width">Create account</button>
                                    </form>
                                    <span>Have an account already? <a href="/signin">Sign in here</a></span>
                        </div>
                    </div>
                </div>
        </div>
    </body>

</html>