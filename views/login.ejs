<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs') %>

    <body>
        <div style="max-height: 100vh; overflow: hidden">
            <%- include('partials/real_nav.ejs') %>
                <div class="auth_form">
                    <div class="auth_form_cover">
                        <div>
                            <h5>Signin to your account</h5>
                            <% if(typeof error !=='undefined' ) { %>
                                <p class="error mt-3 text-danger">
                                    <%= error %>
                                </p>
                                <% } %>
                                <form action="/signin" method="POST" class="mt-3">
                                        <div class="form_group">
                                            <label htmlFor="email">Email address</label>
                                            <input type="text" name="email" id="email" />
                                        </div>
                                        <div class="form_group">
                                            <label htmlFor="password">Password</label>
                                            <input type="password" name="password" id="password" />
                                        </div>
                                        <button class="bg_black full_width">Sign in</button>
                                    </form>
                                    <span>No account yet? <a href="/signup">Sign up here</a></span>
                        </div>
                    </div>
                </div>
        </div>
    </body>

</html>